{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "title": "Section 3 â€” Coral Bleaching Relationships (2019 only)",
  "repeat": {
    "row": ["Percent_Bleaching", "Depth_m", "Turbidity"],
    "column": ["Turbidity", "Depth_m", "Percent_Bleaching"]
  },
  "spec": {
    "data": { "url": "global_bleaching_environmental.csv" },
    "transform": [
      { "filter": "datum.Date_Year == 2019" },
      {
        "filter": "isValid(datum.Percent_Bleaching) && isValid(datum.Depth_m) && isValid(datum.Turbidity)"
      }
    ],
    "mark": { "type": "point", "opacity": 0.5, "size": 22 },
    "params": [
      {
        "name": "brush",
        "select": {
          "type": "interval",
          "resolve": "union",
          "on": "[pointerdown[event.shiftKey], window:pointerup] > window:pointermove!",
          "translate": "[pointerdown[event.shiftKey], window:pointerup] > window:pointermove!",
          "zoom": "wheel![event.shiftKey]"
        }
      },
      {
        "name": "grid",
        "select": {
          "type": "interval",
          "resolve": "global",
          "translate": "[pointerdown[!event.shiftKey], window:pointerup] > window:pointermove!",
          "zoom": "wheel![!event.shiftKey]"
        },
        "bind": "scales"
      }
    ],
    "encoding": {
      "x": {
        "field": {"repeat": "column"},
        "type": "quantitative",
        "scale": {"zero": false},
        "axis": {"labelOverlap": "greedy"}
      },
      "y": {
        "field": {"repeat": "row"},
        "type": "quantitative",
        "scale": {"zero": false},
        "axis": {"minExtent": 30}
      },
      "color": {
        "condition": {
          "param": "brush",
          "field": "Exposure",
          "type": "nominal",
          "title": "Exposure"
        },
        "value": "lightgray"
      },
      "tooltip": [
        {"field": "Site_Name", "type": "nominal"},
        {"field": "Country_Name", "type": "nominal"},
        {"field": "Percent_Bleaching", "type": "quantitative", "format": ".1f"},
        {"field": "Depth_m", "type": "quantitative", "format": ".1f"},
        {"field": "Turbidity", "type": "quantitative", "format": ".2f"}
      ]
    }
  }
}
