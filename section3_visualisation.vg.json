{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "repeat": {
    "row": ["Percent Bleaching", "Depth (m)", "Turbidity (NTU)"],
    "column": ["Turbidity (NTU)", "Depth (m)", "Percent Bleaching"]
  },
  "spec": {
    "data": { "url": "global_bleaching_environmental.csv" },
    "transform": [
      { "filter": "datum.Date_Year == 2019" },
      {
        "filter": "isValid(datum.Percent_Bleaching) && isValid(datum.Depth_m) && isValid(datum.Turbidity)"
      },
      { "calculate": "datum.Percent_Bleaching", "as": "Percent Bleaching" },
      { "calculate": "datum.Depth_m", "as": "Depth (m)" },
      { "calculate": "datum.Turbidity", "as": "Turbidity (NTU)" },
      {
        "calculate": "isValid(datum.Site_Name) && length(datum.Site_Name) ? datum.Site_Name : 'No cite name give'",
        "as": "Site (clean)"
      }
    ],
    "width": 100,
    "height": 100,
    "mark": { "type": "point", "opacity": 0.5, "size": 22 },
    "params": [
      {
        "name": "brush",
        "select": {
          "type": "interval",
          "resolve": "union",
          "on": "[pointerdown[event.shiftKey], window:pointerup] > window:pointermove!",
          "translate": "[pointerdown[event.shiftKey], window:pointerup] > window:pointermove!",
          "zoom": "wheel![event.shiftKey]"
        }
      },
      {
        "name": "grid",
        "select": {
          "type": "interval",
          "resolve": "global",
          "translate": "[pointerdown[!event.shiftKey], window:pointerup] > window:pointermove!",
          "zoom": "wheel![!event.shiftKey]"
        },
        "bind": "scales"
      }
    ],
    "encoding": {
      "x": {
        "field": { "repeat": "column" },
        "type": "quantitative",
        "scale": { "zero": false },
        "axis": { "labelOverlap": "greedy" }
      },
      "y": {
        "field": { "repeat": "row" },
        "type": "quantitative",
        "scale": { "zero": false },
        "axis": { "minExtent": 30 }
      },
      "color": {
        "condition": {
          "param": "brush",
          "field": "Exposure",
          "type": "nominal",
          "title": "Exposure"
        },
        "value": "lightgray"
      },
      "tooltip": [
        { "field": "Site (clean)", "type": "nominal", "title": "Site" },
        { "field": "Country_Name", "type": "nominal", "title": "Country" },
        { "field": "Percent Bleaching", "type": "quantitative", "format": ".1f", "title": "Percent Bleaching" },
        { "field": "Depth (m)", "type": "quantitative", "format": ".1f", "title": "Depth (m)" },
        { "field": "Turbidity (NTU)", "type": "quantitative", "format": ".2f", "title": "Turbidity (NTU)" }
      ]
    }
  },
  "config": {
    "title": { "font": "Markazi Text", "fontSize": 18 },
    "concat": { "spacing": 12 }
  }
}
